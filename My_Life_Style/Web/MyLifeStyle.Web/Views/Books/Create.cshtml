@using MyLifeStyle.Web.ViewModels.Books
@model BookCreateInputModel
@{
    ViewData["Title"] = "Give Book";
}

<h2>Add Readed Book</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Books" asp-action="Create">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PublicationTitle"></label>
                <input asp-for="PublicationTitle" class="form-control" placeholder="Title..." />
                <span asp-validation-for="PublicationTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control h-25" rows="7" placeholder="Description..." /></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorName"></label>
                <input asp-for="AuthorName" class="form-control" placeholder="Author..." />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="Year..." />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>