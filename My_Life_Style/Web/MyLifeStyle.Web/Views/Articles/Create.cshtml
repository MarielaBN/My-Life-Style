@using MyLifeStyle.Web.ViewModels.Articles
@model ArticleCreateInputModel
@{
    ViewData["Title"] = "Create Article";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Articles" asp-action="Create">            
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PublicationTitle"></label>
                <input asp-for="PublicationTitle" class="form-control" placeholder="Title..." />
                <span asp-validation-for="PublicationTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control h-25" rows="10" placeholder="Content..." /></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="CategoryId">Category</label>
                </div>
                <select class="custom-select" id="CategoryId" name="CategoryId">
                    <option selected>Choose...</option>
                    @foreach (var category in Model.AllCategories)
                    {
                        <option value=@category.Id>@category.Name</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>